---
import '../styles/global.css';
const { image, title, reverse = false, url, logoImage } = Astro.props;
---

<div class="breakout-wrapper">
  <section class={`split-section ${reverse ? 'reverse' : ''}`}>
    {!reverse ? (
      <>
        <div class="split-image">
          {url ? (
            <a href={url}>
              <img src={`${import.meta.env.BASE_URL}${image}`} alt={title} />
            </a>
          ) : (
            <img src={`${import.meta.env.BASE_URL}${image}`} alt={title} />
          )}
        </div>
        <div class="split-content" style="display: flex; flex-direction: column; align-items: center; justify-content: center; gap: 1rem;">
          {logoImage && (
            url ? (
              <a href={url} style="display: flex; align-items: center; justify-content: center;">
                <img src={`${import.meta.env.BASE_URL}${logoImage}`} alt={title} style="max-width: 100%; max-height: 200px; height: auto; object-fit: contain;" />
              </a>
            ) : (
              <img src={`${import.meta.env.BASE_URL}${logoImage}`} alt={title} style="max-width: 100%; max-height: 200px; height: auto; object-fit: contain;" />
            )
          )}
          {title && (
            url ? (
              <h3 style="text-align: center; margin: 0;"><a href={url}>{title}</a></h3>
            ) : (
              <h3 style="text-align: center; margin: 0;">{title}</h3>
            )
          )}
        </div>
      </>
    ) : (
      <>
        <div class="split-content" style="display: flex; flex-direction: column; align-items: center; justify-content: center; gap: 1rem;">
          {logoImage && (
            url ? (
              <a href={url} style="display: flex; align-items: center; justify-content: center;">
                <img src={`${import.meta.env.BASE_URL}${logoImage}`} alt={title} style="max-width: 100%; max-height: 200px; height: auto; object-fit: contain;" />
              </a>
            ) : (
              <img src={`${import.meta.env.BASE_URL}${logoImage}`} alt={title} style="max-width: 100%; max-height: 200px; height: auto; object-fit: contain;" />
            )
          )}
          {title && (
            url ? (
              <h3 style="text-align: center; margin: 0;"><a href={url}>{title}</a></h3>
            ) : (
              <h3 style="text-align: center; margin: 0;">{title}</h3>
            )
          )}
        </div>
        <div class="split-image">
          {url ? (
            <a href={url}>
              <img src={`${import.meta.env.BASE_URL}${image}`} alt={title} />
            </a>
          ) : (
            <img src={`${import.meta.env.BASE_URL}${image}`} alt={title} />
          )}
        </div>
      </>
    )}
  </section>
</div>