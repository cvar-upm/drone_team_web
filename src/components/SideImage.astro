---
import '../styles/global.css';
const { image, title, reverse = false, url, logoImage } = Astro.props;
---

<div class="breakout-wrapper">
  <section class={`split-section ${reverse ? 'reverse' : ''}`}>
    {!reverse ? (
      <>
        <div class="split-image">
          <img src={`${import.meta.env.BASE_URL}${image}`} alt={title} />
        </div>
        <div class="split-content" style="display: flex; align-items: center; justify-content: center;">
          {logoImage ? (
            url ? (
              <a href={url} style="display: flex; align-items: center; justify-content: center; width: 100%; height: 100%;">
                <img src={`${import.meta.env.BASE_URL}${logoImage}`} alt={title} style="max-width: 100%; max-height: 100%; height: auto; object-fit: contain;" />
              </a>
            ) : (
              <img src={`${import.meta.env.BASE_URL}${logoImage}`} alt={title} style="max-width: 100%; max-height: 100%; height: auto; object-fit: contain;" />
            )
          ) : url ? (
            <h2 class="split-title" style="text-align: center;"><a href={url}>{title}</a></h2>
          ) : (
            <h2 class="split-title" style="text-align: center;">{title}</h2>
          )}
        </div>
      </>
    ) : (
      <>
        <div class="split-content" style="display: flex; align-items: center; justify-content: center;">
          {logoImage ? (
            url ? (
              <a href={url} style="display: flex; align-items: center; justify-content: center; width: 100%; height: 100%;">
                <img src={`${import.meta.env.BASE_URL}${logoImage}`} alt={title} style="max-width: 100%; max-height: 100%; height: auto; object-fit: contain;" />
              </a>
            ) : (
              <img src={`${import.meta.env.BASE_URL}${logoImage}`} alt={title} style="max-width: 100%; max-height: 100%; height: auto; object-fit: contain;" />
            )
          ) : url ? (
            <h2 class="split-title" style="text-align: center;"><a href={url}>{title}</a></h2>
          ) : (
            <h2 class="split-title" style="text-align: center;">{title}</h2>
          )}
        </div>
        <div class="split-image">
          <img src={`${import.meta.env.BASE_URL}${image}`} alt={title} />
        </div>
      </>
    )}
  </section>
</div>