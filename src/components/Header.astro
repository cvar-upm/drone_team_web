---
import Navigation from './Navigation.astro';
---
<header class="main-header">
  <div class="header-container">
    <div class="logo-container">
      <img src="/images/logo-cvar.png" alt="CVAR DRONE RACING Logo" class="header-logo" />
      <h1 class="site-title">CVAR DRONE RACING</h1>
    </div>
    <Navigation />
  </div>
</header>

<style>
  .main-header {
    background: rgba(255, 255, 255, 1.0);
    backdrop-filter: blur(10px);
    padding: 1rem 0;
    position: sticky;
    top: 0;
    z-index: 1000;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }

  .header-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .logo-container {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .header-logo {
    height: 60px;
    width: auto;
    filter: drop-shadow(0 0 10px rgba(255, 255, 255, 0.3));
  }

  .site-title {
    font-size: 1.8rem;
    font-weight: 800;
    color: rgba(0, 100, 171, 0.95);
    letter-spacing: 2px;
    margin: 0;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  }

  @media (max-width: 768px) {
    .header-container {
      flex-direction: column;
      text-align: center;
    }

    .logo-container {
      flex-direction: column;
    }

    .site-title {
      font-size: 1.3rem;
    }

    .header-logo {
      height: 50px;
    }
  }
</style>