---
import Navigation from './Navigation.astro';

console.log(import.meta.env.BASE_URL)


---
<header class="main-header">
  <div class="header-container">
    <div class="logo-container">
      <img src={`${import.meta.env.BASE_URL}/logo-cvar.png`} alt="CVAR-UPM DRONE TEAM Logo" class="header-logo" />
      <h1 class="site-title">CVAR-UPM DRONE TEAM</h1>
    </div>
    <Navigation />
  </div>
</header>

<style>
  .main-header {
    background: rgba(255, 255, 255, 1.0);
    backdrop-filter: blur(10px);
    padding: 1rem 0;
    position: sticky;
    top: 0;
    z-index: 1000;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }

  .header-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: nowrap;
    gap: 1rem;
  }

  .logo-container {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-shrink: 0;
  }

  .header-logo {
    height: 60px;
    width: auto;
    filter: drop-shadow(0 0 10px rgba(255, 255, 255, 0.3));
  }

  .site-title {
    font-size: 1.8rem;
    font-weight: 800;
    color: rgba(0, 100, 171, 0.95);
    letter-spacing: 2px;
    margin: 0;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  }

  @media (max-width: 768px) {
    .main-header {
      position: relative;
    }

    .header-container {
      padding: 0 1rem;
      gap: 0.5rem;
    }

    .logo-container {
      gap: 0.5rem;
      flex-shrink: 1;
      min-width: 0;
    }

    .site-title {
      font-size: clamp(0.8rem, 3.5vw, 1.3rem);
      letter-spacing: 1px;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .header-logo {
      height: 45px;
    }
  }

  @media (max-width: 480px) {
    .header-container {
      padding: 0 0.5rem;
    }

    .logo-container {
      gap: 0.3rem;
    }

    .site-title {
      font-size: clamp(0.65rem, 3vw, 0.9rem);
      letter-spacing: 0.5px;
    }

    .header-logo {
      height: 35px;
    }
  }
</style>