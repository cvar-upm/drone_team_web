---
import Member from '../components/Member.astro';
import '../styles/global.css';
const { members, offset = false } = Astro.props;
---

<section class="team-members-section">
  <div class="team-row">
    {members.map(member => (
      <Member
        name={member.name}
        image={member.image}
        github={member.github}
        linkedin={member.linkedin}
      />
    ))}
  </div>
</section>

<style>
  .team-members-section {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 2rem 0;
  }

  .team-row {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 2.5rem;
    width: 100%;
    max-width: 1400px;
    padding: 0 2rem;
  }

  .team-row > :global(*) {
    flex: 0 0 280px;
    max-width: 280px;
  }

  @media (max-width: 768px) {
    .team-row {
      gap: 1.5rem;
      padding: 0 1rem;
    }

    .team-row > :global(*) {
      flex: 0 0 240px;
      max-width: 240px;
    }
  }
</style>