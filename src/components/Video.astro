---
import '../styles/global.css';
const { videoUrl = "https://player.vimeo.com/video/1079143067", title = "Video" } = Astro.props;
---


<div style="padding: 0rem 0; background: var(--cvar-white);">
  <div class="video-wrapper" style="max-width: 1200px; margin: 0 auto; position: relative; padding-bottom: 56.25%; height: 0;">
    <iframe
      src={videoUrl}
      title={title}
      allow="autoplay; fullscreen; picture-in-picture; clipboard-write"
      style="position:absolute; top:0; left:0; width:100%; height:100%; border:0;"
    ></iframe>
  </div>
</div>


