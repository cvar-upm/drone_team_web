<style>
  .main-footer {
    background: var(--cvar-blue-primary);
    color: white;
    padding: 3rem 0 1rem;
    margin-top: 4rem;
  }

  .footer-top {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 4rem 3rem;
    display: grid;
    grid-template-columns: 1fr auto;
    align-items: center;
    gap: 3rem;
  }

  .footer-center {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  .footer-logo {
    height: 80px;
    width: auto;
    margin-bottom: 1rem;
    filter: drop-shadow(0 0 15px rgba(255, 255, 255, 0.3));
  }

  .footer-title {
    font-size: 1.8rem;
    font-weight: 800;
    color: white;
    margin: 0;
    letter-spacing: 2px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  }

  .footer-social {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }

  .social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    color: white;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
    pointer-events: auto;
    z-index: 10;
    cursor: pointer;
  }

  .social-icon:hover {
    background: white;
    color: var(--cvar-blue-primary);
    transform: translateY(-3px) scale(1.1);
    box-shadow: 0 8px 20px rgba(255, 255, 255, 0.3);
  }

  .social-icon svg {
    width: 24px;
    height: 24px;
  }

  .footer-map {
    width: 100%;
    padding: 0;
    margin: 0;
  }

  .map-link {
    display: block;
    position: relative;
    text-decoration: none;
    overflow: hidden;
    width: 100%;
  }

  .map-link iframe {
    display: block;
    width: 100%;
  }

  .footer-bottom {
    text-align: center;
    padding: 2rem 4rem 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.9rem;
    max-width: 1400px;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    .footer-top {
      grid-template-columns: 1fr;
      text-align: center;
      padding: 0 2rem 2rem;
      gap: 2rem;
    }

    .footer-social {
      justify-content: center;
    }

    .footer-logo {
      height: 60px;
    }

    .footer-title {
      font-size: 1.4rem;
    }

    .footer-map {
      padding: 0;
    }

    .map-link iframe {
      height: 250px;
    }

    .footer-bottom {
      padding: 2rem 2rem 1rem;
    }

    .social-icon {
      width: 44px;
      height: 44px;
    }
  }
</style>