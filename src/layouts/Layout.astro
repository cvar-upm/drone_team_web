---
import BaseHead from '../components/Header.astro';
import Footer from '../components/Footer.astro';
const { title } = Astro.props;
const { subtitle } = Astro.props;
const { showJoin = false } = Astro.props;
const { heroImage } = Astro.props; 
---
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body>
    <BaseHead />

    <section 
      class="hero-banner"
      style={heroImage ? `background-image: url(${import.meta.env.BASE_URL}${heroImage});` : ""}
    >
      <div class="hero-overlay">
        <h1 class="hero-title">{title}</h1>
        <p class="hero-subtitle">{subtitle}</p>

        {showJoin && (
          <a href={`${import.meta.env.BASE_URL}/contact`} class="btn-join-us">
            JOIN US
          </a>
        )}
      </div>
    </section>

    <article>
      <slot />
    </article>

    <Footer />
  </body>
</html>