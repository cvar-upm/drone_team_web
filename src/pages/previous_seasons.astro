---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Conoce al equipo CVAR DRONE RACING" />
    <title>Last Seasons - CVAR DRONE RACING</title>
  </head>
  <body>
    <Header />
    <section class="hero-banner">
      <div class="hero-overlay">
        <h1 class="hero-title">Last Seasons</h1>
      </div>
    </section>

    <!-- Previous seasons cards: two blocks side-by-side -->
    <section class="seasons-section">
      <div class="seasons-grid">
        <a class="season-card season-25-26" href="/previous_seasons/25-26" aria-label="Season 25-26">
          <div class="season-overlay">
            <h2>Season 25-26</h2>
          </div>
        </a>

        <a class="season-card season-24-25" href="/previous_seasons/24-25" aria-label="Season 24-25">
          <div class="season-overlay">
            <h2>Season 24-25</h2>
          </div>
        </a>
      </div>
    </section>

    <Footer />

    <style>
      .seasons-section{
        width:100%;
        padding:4rem 0 6rem;
        background: linear-gradient(180deg, rgba(0,0,0,0) 0%, rgba(0,0,0,0) 100%);
      }

      .seasons-grid{
        max-width:1400px;
        margin:0 auto;
        padding:0 2rem;
        display:grid;
        grid-template-columns: 1fr 1fr;
        gap:2rem;
        align-items:stretch;
      }

      .season-card{
        display:block;
        position:relative;
        height:420px;
        border-radius:12px;
        overflow:hidden;
        background-size:cover;
        background-position:center center;
        box-shadow: 0 12px 30px rgba(0,0,0,0.25);
        text-decoration:none;
        color:inherit;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
      }

      .season-card:hover{ transform: translateY(-6px); box-shadow: 0 20px 45px rgba(0,0,0,0.35); }

      /* background images: replace or keep these paths */
      .season-25-26{ background-image: url(`${import.meta.env.BASE_URL}/fondo.png`); }
      .season-24-25{ background-image: url(`${import.meta.env.BASE_URL}/fondo.png`); }

      .season-overlay{
        position:absolute;
        inset:0;
        background: linear-gradient(180deg, rgba(0,0,0,0.15) 0%, rgba(0,0,0,0.45) 70%);
        display:flex;
        align-items:flex-end;
        justify-content:flex-start;
        padding:2.5rem;
      }

      .season-overlay h2{
        color: white;
        font-size: clamp(1.8rem, 4vw, 2.6rem);
        margin:0;
        font-weight:900;
        letter-spacing:1px;
        text-shadow: 2px 4px 18px rgba(0,0,0,0.6);
      }

      @media (max-width: 900px){
        .seasons-grid{ grid-template-columns: 1fr; }
        .season-card{ height:280px; }
      }
    </style>
  </body>
</html>

