---
import Layout from '../layouts/Layout.astro';
import SideImage from '../components/SideImage.astro';
import '../styles/global.css';

---
<Layout title="Competitions" subtitle="" showJoin={false} heroImage="/fondo.jpeg"> 
  <SideImage
    image="/a2rl_dron.png"
    logoImage="/a2rl.png"
    url={`${import.meta.env.BASE_URL}/competitions/A2RL`}
    reverse={false}
    title="Abu Dhabi Autonomous Racing League"
  />

  <SideImage
    image="/icuas23/icuas23_4.png"
    logoImage="/icuas.png"
    url={`${import.meta.env.BASE_URL}/competitions/ICUAS`}
    reverse={true}
    title="International Conference on Unmanned Aircraft Systems"
  />

  <SideImage
    image="/imav_dron.jpeg"
    logoImage="/imav.png"
    url={`${import.meta.env.BASE_URL}/competitions/IMAV`}
    reverse={false}
    title="International Micro Air Vehicle Competition"
  />

  <SideImage
    image="/MBZIRC_dron.jpg"
    logoImage="/MBZIRC.png"
    url={`${import.meta.env.BASE_URL}/competitions/MBZIRC`}
    reverse={true}
    title="Mohamed Bin Zayed International Robotics Challenge"
  />

  <SideImage
    image="/opencv.png"
    logoImage="/opencv_logo.png"
    url={`${import.meta.env.BASE_URL}/competitions/OpenCV`}
    reverse={false}
    title="OpenCV AI Competition"
  />
</Layout>