---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Conoce al equipo CVAR DRONE RACING" />
    <title>Team - CVAR DRONE RACING</title>
  </head>
  <body>
    <Header />
    <section class="hero-banner">
      <div class="hero-overlay">
        <h1 class="hero-title">Team</h1>
      </div>
    </section>

    <!-- Team Members - Círculos Intercalados -->
    <div class="team-members-section">
      <!-- Primera fila: 4 círculos -->
      <div class="team-row">
        <div class="team-member">
          <div class="member-circle">
            <img src="/images/member.png" alt="Member 1" />
          </div>
          <h3 class="member-name">Rafael Pérez-Seguí</h3>
          <p class="member-role">Team Coordinator</p>
        </div>
        
        <div class="team-member">
          <div class="member-circle">
            <img src="/images/member.png" alt="Member 2" />
          </div>
          <h3 class="member-name">Rodrigo Da-Silva</h3>
          <p class="member-role"> Pose estimation</p>
        </div>
        
        <div class="team-member">
          <div class="member-circle">
            <img src="/images/member.png" alt="Member 3" />
          </div>
          <h3 class="member-name">Javier Melero</h3>
          <p class="member-role">Gate detection</p>
        </div>
        
        <div class="team-member">
          <div class="member-circle">
            <img src="/images/member.png" alt="Member 4" />
          </div>
          <h3 class="member-name">Francisco Anguita </h3>
          <p class="member-role"> Control and sensoring</p>
        </div>
      </div>

      <!-- Segunda fila: 3 círculos intercalados -->
      <div class="team-row team-row-offset">
        <div class="team-member">
          <div class="member-circle">
            <img src="/images/member.png" alt="Member 5" />
          </div>
          <h3 class="member-name"> Carmen De Rojas </h3>
          <p class="member-role"> Control implementation</p>
        </div>
        
        <div class="team-member">
          <div class="member-circle">
            <img src="/images/member.png" alt="Member 6" />
          </div>
          <h3 class="member-name">Alejandro Rodriguez </h3>
          <p class="member-role">Machine Learning</p>
        </div>
        
        <div class="team-member">
          <div class="member-circle">
            <img src="/images/member.png" alt="Member 7" />
          </div>
          <h3 class="member-name">Pascual Campoy</h3>
          <p class="member-role">Professor leading CVAR-UPM</p>
        </div>
      </div>
    </div>

    <Footer />
  </body>
</html>

<style>
  /* Team Members Section - Full Width */
  .team-members-section {
    width: 100%;
    padding: 5rem 2rem;
    background: linear-gradient(135deg, var(--cvar-blue-primary) 0%, var(--cvar-blue-secondary) 100%);
  }

  /* Filas de círculos */
  .team-row {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    gap: 4rem;
    margin-bottom: 3rem;
  }

  /* Segunda fila intercalada (offset) */
  .team-row-offset {
    padding-left: calc(50% / 4 + 2rem);
    padding-right: calc(50% / 4 + 2rem);
  }

  /* Miembro individual */
  .team-member {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    max-width: 200px;
  }

  /* Círculo con imagen */
  .member-circle {
    width: 180px;
    height: 180px;
    border-radius: 50%;
    overflow: hidden;
    border: 4px solid white;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
    margin-bottom: 1.5rem;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .member-circle:hover {
    transform: scale(1.05);
    box-shadow: 0 12px 35px rgba(0, 0, 0, 0.4);
  }

  .member-circle img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Nombre (negrita, destacado) */
  .member-name {
    font-size: 1.4rem;
    font-weight: 800;
    color: white;
    margin: 0 0 0.5rem 0;
    letter-spacing: 0.5px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  }

  /* Oficio (sin negrita, tono más suave) */
  .member-role {
    font-size: 1rem;
    font-weight: 400;
    color: rgba(255, 255, 255, 0.8);
    margin: 0;
    letter-spacing: 0.3px;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .team-row {
      gap: 2rem;
    }

    .team-row-offset {
      padding-left: 2rem;
      padding-right: 2rem;
    }

    .member-circle {
      width: 140px;
      height: 140px;
    }

    .member-name {
      font-size: 1.2rem;
    }

    .member-role {
      font-size: 0.9rem;
    }
  }

  @media (max-width: 768px) {
    .team-row,
    .team-row-offset {
      flex-wrap: wrap;
      gap: 3rem;
      padding-left: 2rem;
      padding-right: 2rem;
    }

    .team-member {
      max-width: 150px;
    }

    .member-circle {
      width: 120px;
      height: 120px;
    }
  }
</style>