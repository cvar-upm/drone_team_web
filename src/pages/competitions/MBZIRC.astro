---
import Layout from '../../layouts/Layout.astro';
import Carousel from '../../components/Carousel.astro';
import '../../styles/global.css';

const mbzirc2020 = [
  { type: 'video', src: 'https://player.vimeo.com/video/399137661?h=3aad49b2dd' },
  { type: 'image', src: '/mbzirc/mbzirc_2.jpeg' },

