<style>
  .contact-social {
    display: flex;
    gap: 2rem;
    justify-content: center;
    align-items: center;
    margin-top: 2rem;
    padding: 2rem 0;
  }

  .contact-social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    background: var(--cvar-blue-primary);
    border-radius: 50%;
    color: white;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .contact-social-icon:hover {
    background: var(--cvar-blue-secondary);
    transform: translateY(-5px) scale(1.15);
    box-shadow: 0 10px 25px rgba(0, 102, 204, 0.4);
  }

  .contact-social-icon svg {
    width: 32px;
    height: 32px;
  }

  @media (max-width: 768px) {
    .contact-social {
      gap: 1.5rem;
      padding: 1.5rem 0;
    }

    .contact-social-icon {
      width: 52px;
      height: 52px;
    }

    .contact-social-icon svg {
      width: 28px;
      height: 28px;
    }
  }
</style>
</Layout>
